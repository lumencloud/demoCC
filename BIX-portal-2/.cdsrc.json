{
    "requires": {
        "[hybrid]": {
            "db": "hana"
        },
        "[production]": {
            "db": "hana",
            "auth": "xsuaa"
        },
        "db": "hana",
        "connectivity": true
    },
    "build": {
        "target": "gen",
        "tasks": [
            {
                "for": "hana",
                "src": "db",
