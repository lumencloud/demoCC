<mvc:View xmlns:layout="sap.ui.layout" controllerName="bix.card.deselected.card"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    height="100%"
