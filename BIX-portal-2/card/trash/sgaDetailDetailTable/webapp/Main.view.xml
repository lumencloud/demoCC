<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    xmlns:table="sap.ui.table"
    xmlns:rowmodes="sap.ui.table.rowmodes"
    xmlns:html="http://www.w3.org/1999/xhtml"
    width="100%"
    height="100%"
    displayBlock="true"
    controllerName="bix.card.sgaDetailDetailTable.Main"
>
    <table:Table
        id="sgaDetailDetailTable"
        class="custom-table custom-uiTable-selection custom-inherit-height"
        rows="{sgaDetailDetailTableModel>/}"
        selectionMode="None"
    >
        <table:rowMode>
            <rowmodes:Fixed rowCount="12" />
        </table:rowMode>

        <table:columns>
            <table:Column
                hAlign="Center"
                autoResizable="true"
            >
                <Label
                    text="구분"
                    wrapping="true"
                />
                <table:template>
                    <Text
                        text="{sgaDetailDetailTableModel>type}"
                        wrapping="false"
                        width="100%"
                        textAlign="Center"
                    />
                </table:template>
            </table:Column>
            <table:Column
                hAlign="Center"
                autoResizable="true"
            >
                <Label
                    text="당해추정"
                    wrapping="true"
                />
                <table:template>
                    <Text
                        text="{sgaDetailDetailTableModel>aa}"
                        wrapping="false"
                        width="100%"
                        textAlign="Center"
                    />
                </table:template>
            </table:Column>
            <table:Column
                hAlign="Center"
                autoResizable="true"
            >
                <Label
                    text="전년동기"
                    wrapping="true"
                />
                <table:template>
                    <Text
                        text="{sgaDetailDetailTableModel>bb}"
                        wrapping="false"
                        width="100%"
                        textAlign="Center"
                    />
                </table:template>
            </table:Column>
            <table:Column
                hAlign="Center"
                autoResizable="true"
            >
                <Label
                    text="차이"
                    wrapping="true"
                />
                <table:template>
                    <Text
                        text="{sgaDetailDetailTableModel>cc}"
                        wrapping="false"
                        width="100%"
                        textAlign="Center"
                    />
                </table:template>
            </table:Column>
        </table:columns>
    </table:Table>
</mvc:View>
