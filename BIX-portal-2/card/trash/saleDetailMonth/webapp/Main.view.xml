<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    width="100%"
    height="100%"
    displayBlock="true"
    controllerName="bix.card.saleDetailMonth.Main"
>

    <OverflowToolbar>
        <Select items="{periodSelect>/}" width="30%" selectedKey="{searchModel>/period}" change=".onChange">
            <core:Item key="{periodSelect>key}" text="{periodSelect>value}"/>
        </Select>
    </OverflowToolbar>

    <FlexBox alignItems="Center" justifyContent="Center" renderType="Bare"
        fitContainer="true" >
        <core:HTML id="html" />
    </FlexBox>
</mvc:View>