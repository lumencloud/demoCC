<mvc:View
    id="contentFinderView"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="bix.common.library.home.library.ushell.components.contentFinder.controller.ContentFinderDialog"
    core:require="{ formatMessage: 'sap/base/strings/formatMessage' }"
    height="100%"
>
    <Dialog
        id="contentFinderDialog"
        contentWidth="60rem"
        contentHeight="80%"
        draggable="true"
        resizable="false"
        class="sapUiContentPadding"
        horizontalScrolling="false"
        verticalScrolling="false"
        afterClose=".onAfterClose"
        showHeader="false"
    >
        <content>
            <OverflowToolbar
                width="100%"
                height="3rem"
                style="Standard"
                class="custom-dialog-toolbar"
            >
                <Title
                    text="위젯 추가"
                    class="custom-header-subtitle"
                />
                <ToolbarSpacer />
                <Button
                    id="closeButton"
                    icon="sap-icon://decline"
                    class="custom-button-color"
                    press="onCancelButtonPressed"
                />
            </OverflowToolbar>
            <mvc:XMLView
                id="contentFinderAppSearchView"
                async="true"
                height="100%"
                viewName="bix.common.library.home.library.ushell.components.contentFinder.view.AppSearch"
            />
        </content>
    </Dialog>
</mvc:View>
