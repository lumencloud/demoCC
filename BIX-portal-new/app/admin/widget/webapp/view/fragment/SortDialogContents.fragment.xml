<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ViewSettingsDialog
        id="ContentsSortDialog"
		sortDescending="true"
		confirm="onSort">
		<sortItems>
			<ViewSettingsItem text="{i18n>card_title}" key="name" selected="true" />
			<ViewSettingsItem text="{i18n>registration_date}" key="createdAt"  />
		</sortItems>
	</ViewSettingsDialog>
</core:FragmentDefinition>