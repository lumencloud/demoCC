<mvc:View xmlns:layout="sap.ui.layout" controllerName="bix.card.newRegistBau.card"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    height="100%"
    width="100%"
    displayBlock="true"
>   
    <form:SimpleForm>
        <form:content>
            <VBox>                 

                <VBox class="custom-card-box-padding">

                <VBox visible="{=!!${Model>/first}}">                    
                    <HBox>
                        <VBox justifyContent="Center">
                            <core:Icon src="sap-icon://circle-task-2" size="0.5rem"/>
                        </VBox>
                        <Text emptyIndicatorMode="On" text="{Model>/first/biz_tp_account_nm} {Model>/first/biz_opp_nm} " class="sapUiTinyMarginBegin"/>                        
                    </HBox>
                    <HBox>
                        <Text emptyIndicatorMode="On" text="({Model>/first/total_target_amt}억)" class="custom-negative-state sapUiSmallMarginBegin"/>
                    </HBox>
                </VBox>

                <VBox visible="{=!!${Model>/second}}">                    
                    <HBox>
                        <VBox justifyContent="Center">
                            <core:Icon src="sap-icon://circle-task-2" size="0.5rem"/>
                        </VBox>
                        <Text emptyIndicatorMode="On" text="{Model>/second/biz_tp_account_nm} {Model>/second/biz_opp_nm} " class="sapUiTinyMarginBegin"/>                        
                    </HBox>
                    <HBox>
                        <Text emptyIndicatorMode="On" text="({Model>/second/total_target_amt}억)" class="custom-negative-state sapUiSmallMarginBegin"/>
                    </HBox>
                </VBox>

                <VBox visible="{=!!${Model>/third}}">                    
                    <HBox>
                        <VBox justifyContent="Center">
                            <core:Icon src="sap-icon://circle-task-2" size="0.5rem"/>
                        </VBox>
                        <Text emptyIndicatorMode="On" text="{Model>/third/biz_tp_account_nm} {Model>/third/biz_opp_nm} " class="sapUiTinyMarginBegin"/>                        
                    </HBox>
                    <HBox>
                        <Text emptyIndicatorMode="On" text="({Model>/third/total_target_amt})억" class="custom-negative-state sapUiSmallMarginBegin"/>
                    </HBox>
                </VBox>

                <VBox visible="{=!!${Model>/forth}}">                    
                    <HBox>
                        <VBox justifyContent="Center">
                            <core:Icon src="sap-icon://circle-task-2" size="0.5rem"/>
                        </VBox>
                        <Text emptyIndicatorMode="On" text="{Model>/forth/biz_tp_account_nm} {Model>/third/biz_opp_nm} " class="sapUiTinyMarginBegin"/>                        
                    </HBox>
                    <HBox>
                        <Text emptyIndicatorMode="On" text="({Model>/forth/total_target_amt})억" class="custom-negative-state sapUiSmallMarginBegin"/>
                    </HBox>
                </VBox>

                <VBox visible="{=!!${Model>/account1thName}}">                    
                    <HBox>                        
                        <Text emptyIndicatorMode="On" text="기타 : {Model>/account1thName}({Model>/account1thCount}건), {Model>/account2ndName}({Model>/account2ndCount}건) 등"/>                        
                    </HBox>                    
                </VBox>
            </VBox>
            </VBox>
        </form:content>
    </form:SimpleForm>           
</mvc:View>
