<mvc:View xmlns:layout="sap.ui.layout" controllerName="bix.card.saleRelsco.card"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    height="100%"
    width="100%"
    displayBlock="true"
>   
    <form:SimpleForm>
        <form:content>
            <HBox width="100%" justifyContent="SpaceBetween">
                <VBox width="70%">
                    <core:HTML id="html0" />
                </VBox>
                <VBox width="30%" justifyContent="Center">
                    <HBox justifyContent="SpaceBetween" alignItems="Center" width="100%">
                        <VBox width="70%" justifyContent="Center" height="100%">
                            <Text 
                                class="custom-card-sub-title"
                                emptyIndicatorMode="On"
                                    text="{
                                        parts:[
                                            {path:'model>/new', targetType: 'any'},
                                            {value:'billion'}
                                        ],
                                        formatter: '.onFormatPerformance'
                                        }"
                                    tooltip="{
                                        parts:[
                                            {path:'model>/new', targetType: 'any'},
                                            {value:'tooltip'}                                     
                                        ],
                                        formatter: '.onFormatPerformance'                                
                                        }"
                                    wrapping="false"
                                    width="100%"
                                    
                                />
                        </VBox>
                        <VBox width="30%" justifyContent="Center">
                            <Text emptyIndicatorMode="On"
                                    text="{
                                        parts:[
                                            {path:'model>/newRate', targetType: 'any'},
                                            {value:'percent'}
                                        ],
                                        formatter: '.onFormatPerformance'
                                    }"
                                    tooltip="{
                                        parts:[
                                            {path:'model>/newRate', targetType: 'any'},
                                            {value:'tooltip'}                                      
                                        ],
                                        formatter: '.onFormatPerformance'                                
                                    }"
                                    wrapping="false"
                                    width="100%"
                                    textAlign="End"
                                />
                        </VBox>
                    </HBox>

                    <HBox justifyContent="SpaceBetween" alignItems="Center" width="100%">
                        <VBox width="70%" justifyContent="Center" height="100%">
                            <Text 
                                class="custom-card-sub-title"
                                emptyIndicatorMode="On"
                                    text="{
                                        parts:[
                                            {path:'model>/Relsco', targetType: 'any'},
                                            {value:'billion'}
                                        ],
                                        formatter: '.onFormatPerformance'
                                        }"
                                    tooltip="{
                                        parts:[
                                            {path:'model>/Relsco', targetType: 'any'},
                                            {value:'tooltip'}                                     
                                        ],
                                        formatter: '.onFormatPerformance'                                
                                        }"
                                    wrapping="false"
                                    width="100%"
                                    
                                />
                        </VBox>
                        <VBox width="30%" justifyContent="Center">
                            <Text emptyIndicatorMode="On"
                                    text="{
                                        parts:[
                                            {path:'model>/RelscoRate', targetType: 'any'},
                                            {value:'percent'}
                                        ],
                                        formatter: '.onFormatPerformance'
                                    }"
                                    tooltip="{
                                        parts:[
                                            {path:'model>/RelscoRate', targetType: 'any'},
                                            {value:'tooltip'}                                      
                                        ],
                                        formatter: '.onFormatPerformance'                                
                                    }"
                                    wrapping="false"
                                    width="100%"
                                    textAlign="End"
                                />
                        </VBox>
                    </HBox>                    
                </VBox>
            </HBox>
        </form:content>
    </form:SimpleForm>         
</mvc:View>
