<mvc:View xmlns:layout="sap.ui.layout" controllerName="bix.card.completedContractBau.card"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    height="100%"
    width="100%"
    displayBlock="true"
>   
    <form:SimpleForm>
        <form:content>
            <VBox>            
                <VBox class="custom-card-box-padding" visible="{=!!${Model>/first}}">                    
                    <HBox >
                        <VBox class="custom-card-circle-box red" width="15%">
                            <Text emptyIndicatorMode="On" text="{Model>/first/biz_tp_account_nm}" textAlign="Center" width="100%"/>
                        </VBox>
                        <HBox width="85%" class="custom-card-box-one-line sapUiTinyMarginBegin">
                            <Text emptyIndicatorMode="On" text="{Model>/first/biz_opp_nm}"/>                        
                            <Text emptyIndicatorMode="On" text="({Model>/first/total_target_amt}억)" class="custom-negative-state sapUiTinyMarginBegin"/>
                        </HBox>
                    </HBox>                    
                </VBox>

                <VBox class="custom-card-box-padding" visible="{=!!${Model>/second}}">                    
                    <HBox >
                        <VBox class="custom-card-circle-box red" width="15%">
                            <Text emptyIndicatorMode="On" text="{Model>/second/biz_tp_account_nm}" textAlign="Center" width="100%"/>
                        </VBox>
                        <HBox width="85%" class="custom-card-box-one-line sapUiTinyMarginBegin">
                            <Text emptyIndicatorMode="On" text="{Model>/second/biz_opp_nm}"/>                        
                            <Text emptyIndicatorMode="On" text="({Model>/second/total_target_amt}억)" class="custom-negative-state sapUiTinyMarginBegin"/>
                        </HBox>
                    </HBox>                    
                </VBox>

                <VBox class="custom-card-box-padding" visible="{=!!${Model>/third}}">                    
                    <HBox >
                        <VBox class="custom-card-circle-box red" width="15%">
                            <Text emptyIndicatorMode="On" text="{Model>/third/biz_tp_account_nm}" textAlign="Center" width="100%"/>
                        </VBox>
                        <HBox width="85%" class="custom-card-box-one-line sapUiTinyMarginBegin">
                            <Text emptyIndicatorMode="On" text="{Model>/third/biz_opp_nm}"/>                        
                            <Text emptyIndicatorMode="On" text="({Model>/third/total_target_amt}억)" class="custom-negative-state sapUiTinyMarginBegin"/>
                        </HBox>
                    </HBox>                    
                </VBox>

                <VBox class="custom-card-box-padding" visible="{=!!${Model>/forth}}">                    
                    <HBox >
                        <VBox class="custom-card-circle-box red" width="15%">
                            <Text emptyIndicatorMode="On" text="{Model>/forth/biz_tp_account_nm}" textAlign="Center" width="100%"/>
                        </VBox>
                        <HBox width="85%" class="custom-card-box-one-line sapUiTinyMarginBegin">
                            <Text emptyIndicatorMode="On" text="{Model>/forth/biz_opp_nm}"/>                        
                            <Text emptyIndicatorMode="On" text="({Model>/forth/total_target_amt}억)" class="custom-negative-state sapUiTinyMarginBegin"/>
                        </HBox>
                    </HBox>                    
                </VBox>

                <VBox class="custom-card-box-padding" visible="{=!!${Model>/account1thName}}">                    
                    <HBox>
                        <VBox class="custom-card-circle-box gray" width="15%">
                            <Text emptyIndicatorMode="On" text="기타" textAlign="Center" width="100%"/>
                        </VBox>
                        <HBox width="85%" class="custom-card-box-one-line sapUiTinyMarginBegin">
                            <Text emptyIndicatorMode="On" text="{Model>/account1thName} 등 {Model>/etcCount}건"/>                        
                            <Text emptyIndicatorMode="On" text="({Model>/etcAmount}억)" class="custom-negative-state sapUiTinyMarginBegin"/>
                        </HBox>
                    </HBox>                    
                </VBox>

                
            </VBox>
        </form:content>
    </form:SimpleForm>            
</mvc:View>
