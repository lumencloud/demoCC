<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:table="sap.ui.table"
    xmlns:rowmodes="sap.ui.table.rowmodes"
    width="100%"
    height="100%"
    displayBlock="true"
    busyIndicatorDelay="0"
    controllerName="bix.card.accountDetailTableAiReport.Main"
>
    <Panel
        expandable="false"
        expanded="true"
        width="100%"
        height="100%"
        class="sapUiNoContentPadding"
    >
        <content>
            <VBox
                width="100%"
                height="100%"
            >

                <VBox
                    id="actualSaleMarginDetailBox1"
                    class="custom-vbox-wrap-table"
                    busyIndicatorDelay="0"
                    height="100%"
                    width="100%" 
                >
                    <table:Table
                        id="accountDetailTable"
                        rows="{path:'oAccountTableModel>/'}"
                        class=" custom-table-container custom-table-header custom-table-body custom-pl-detail-table custom-uiTable-selection custom-inherit-height"
                        selectionMode="Single" 
                        selectionBehavior="RowOnly" 
                        firstVisibleRowChanged="onFirstVisibleRowChanged"
                        rowSelectionChange="onRowSelectionChange"
                        fixedColumnCount="2"
                        busyIndicatorDelay="10000000"
                        visibleRowCountMode="Auto"
                        fieldGroupIds="content"
                    >
                        <table:extension>
                            <OverflowToolbar width="100%" height="3rem" style="Standard">

                                <Image src="./resource/icon/aipopup/aipopup_icon01.png" width="26px" height="23px"/>
                                <Text text="세부데이터"/>
                                <ToolbarSpacer />
                                <Button text="엑셀 다운로드" class="custom-text-semibold" icon="sap-icon://excel-attachment" type="Neutral" press="onExcelDownload" />
                                <ToolbarSeparator />
                                <Text emptyIndicatorMode="On"  text="단위 (억)"/>
                            </OverflowToolbar>
                        </table:extension>
                        <table:layoutData>
                            <FlexItemData growFactor="1" />
                        </table:layoutData>

                        <table:columns>
                            <table:Column
                                hAlign="Center"
                                width="10rem"
                                resizable="false"
                                
                            >
                                <table:multiLabels>
                                    <Label text="고객사명" wrapping="true"/>
                                    <Label text=""/>
                                </table:multiLabels>
                                <table:template>
                                    <Text emptyIndicatorMode="On"
                                        text="{oAccountTableModel>name}"
                                        tooltip="{oAccountTableModel>name}"
                                        wrapping="false"
                                        width="100%"
                                        textAlign="Begin"
                                    />
                                </table:template>
                            </table:Column>


                            <table:Column
                                headerSpan="3"  
                                hAlign="Center"
                                resizable="false"
                                width="7rem"
                            >
                                <table:multiLabels>
                                    <Label text="당월 실적" wrapping="true"/>
                                    <Label text="당월"/>
                                </table:multiLabels>
                                <table:template>
                                    <Text emptyIndicatorMode="On"
                                        text="{     
                                    parts:[         
                                        {path:'oAccountTableModel>curr_value', targetType: 'any'},    
                                        {value:''},
                                        {path:'oAccountTableModel>type',  targetType: 'any'}     
                                    ],     
                                    formatter: '.onFormatPerformance' }"
                                        tooltip="{     
                                            parts:[     
                                                {path:'oAccountTableModel>curr_value', targetType: 'any'},  
                                                {value:''},
                                                {path:'oAccountTableModel>type',  targetType: 'any'},
                                                {value:'tooltip'}
                                            ],     
                                            formatter: '.onFormatPerformance'                                 
                                        }"
                                        wrapping="false"
                                        width="100%"
                                        textAlign="End"
                                    />
                                </table:template>
                            </table:Column>

                            <table:Column
                                hAlign="Center"
                                width="7rem"
                                resizable="false"
                            >
                                
                                <table:multiLabels>
                                    <Label text="당월 실적" wrapping="true"/>
                                    <Label text="전년 동기"/>
                                </table:multiLabels>
                                <table:template>
                                    <Text emptyIndicatorMode="On"
                                        text="{     
                                        parts:[        
                                            {path:'oAccountTableModel>last_value', targetType: 'any'}, 
                                            {value:''},
                                            {path:'oAccountTableModel>type', targetType: 'any'}
                                        ],     
                                        formatter: '.onFormatPerformance'
                                    }"
                                        tooltip="{    
                                        parts:[       
                                            {path:'oAccountTableModel>last_value', targetType: 'any'},   
                                            {value:''},
                                            {path:'oAccountTableModel>type',  targetType: 'any'},
                                            {value:'tooltip'}
                                        ],     
                                        formatter: '.onFormatPerformance'                                 
                                    }"
                                        wrapping="false"
                                        width="100%"
                                        textAlign="End"
                                    />
                                </table:template>
                            </table:Column>

                            <table:Column
                                hAlign="Center"
                                width="7rem"
                                resizable="false"
                                >
                                <table:multiLabels>
                                    <Label text="당월 실적" wrapping="true"/>
                                    <Label text="GAP"/>
                                </table:multiLabels>
                                <table:template>
                                    <Text emptyIndicatorMode="On"
                                        text="{
                                            parts:[ 
                                                {path:'oAccountTableModel>curr_value', targetType: 'any'}, 
                                                {path:'oAccountTableModel>last_value', targetType: 'any'}, 
                                                {path:'oAccountTableModel>type',  targetType: 'any'}
                                            ],
                                            formatter: '.onFormatPerformance'
                                            }"
                                        tooltip="{
                                            parts:[ 
                                                {path:'oAccountTableModel>curr_value', targetType: 'any'}, 
                                                {path:'oAccountTableModel>last_value', targetType: 'any'}, 
                                                {path:'oAccountTableModel>type',  targetType: 'any'},
                                                {value:'tooltip'}
                                            ],
                                            formatter: '.onFormatPerformance'                                
                                            }"
                                        wrapping="false"
                                        width="100%"
                                        textAlign="End"
                                    />
                                </table:template>
                            </table:Column>
                        </table:columns>
                    </table:Table>
                </VBox>
            </VBox>
        </content>
    </Panel>
</mvc:View>
