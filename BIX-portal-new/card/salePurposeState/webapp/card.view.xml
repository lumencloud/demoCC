<mvc:View
    xmlns:layout="sap.ui.layout"
    controllerName="bix.card.salePurposeState.card"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    height="100%"
    width="100%"
    displayBlock="true"
>
    <form:SimpleForm>
        <form:content>
            <VBox
                width="100%" 
                height="100%"               
            >
                <HBox width="100%" alignItems="Center" justifyContent="Center">
                    <core:HTML id="html0" />
                </HBox>

                <VBox class="custom-donught-title">
                    <Text
                                class="custom-blue-state bold size"
                                emptyIndicatorMode="On"
                                text="{
                                            parts:[
                                                {path:'model>/Percentage', targetType: 'any'},
                                                {value:'percent'}
                                            ],
                                            formatter: '.onFormatPerformance'
                                            }"
                                tooltip="{
                                            parts:[
                                                {path:'model>/Percentage', targetType: 'any'},
                                                {value:'tooltip'}                                     
                                            ],
                                            formatter: '.onFormatPerformance'                                
                                            }"
                                wrapping="false"
                                width="100%"
                                textAlign="Center"
                            />
                    <Text text="달성률" class="custom-donut-inner-title"></Text>                
                </VBox>
                
                <VBox
                    width="100%"
                    justifyContent="Center"
                >
                    <HBox width="100%" justifyContent="SpaceBetween" alignItems="Center" class="custom-dashboard-box gray sapUiSmallMarginTop">
                        <HBox width="10%" justifyContent="Center" alignItems="Center">
                            <core:Icon src="sap-icon://flag-2" class="custom-blue-state"/>
                        </HBox>
                        <HBox width="20%">
                            <Text text="연간 목표" />
                        </HBox>
                        <HBox width="20%" justifyContent="End" >
                            <Text
                                class="custom-text-bold"
                                emptyIndicatorMode="On"
                                text="{
                                            parts:[
                                                {path:'model>/Purpose', targetType: 'any'},
                                                {value:''}
                                            ],
                                            formatter: '.onFormatPerformance'
                                            }"
                                tooltip="{
                                            parts:[
                                                {path:'model>/Purpose', targetType: 'any'},
                                                {value:'tooltip'}                                     
                                            ],
                                            formatter: '.onFormatPerformance'                                
                                            }"
                                wrapping="false"
                                width="100%"
                                textAlign="End"
                            />
                        </HBox>

                        <HBox width="45%" justifyContent="SpaceBetween" alignItems="Center">
                            
                            <HBox class="custom-dashboard-box2" visible="{=!!${model>/PurposeContrast}}" >
                                <core:Icon src="sap-icon://trend-up" class="custom-positive-state sapUiTinyMarginEnd" visible="{=!!${model>/PurposeContrast}}" />
                                <Text
                                    class="custom-positive-state"
                                    emptyIndicatorMode="On"
                                    text="{
                                            parts:[
                                                {path:'model>/PurposeContrast', targetType: 'any'},
                                                {value:'percent'}
                                            ],
                                            formatter: '.onFormatPerformance'
                                        }"
                                    tooltip="{
                                            parts:[
                                                {path:'model>/PurposeContrast', targetType: 'any'},
                                                {value:'tooltip'}                                      
                                            ],
                                            formatter: '.onFormatPerformance'                                
                                        }"
                                    wrapping="false"
                                    width="100%"
                                    textAlign="End"
                                />
                            </HBox>
                            <VBox justifyContent="Center">
                                <Text text="전년대비" visible="{=!!${model>/PurposeContrast}}" />
                            </VBox>
                        </HBox>
                    </HBox>

                    <HBox width="100%" justifyContent="SpaceBetween" alignItems="Center" class="custom-dashboard-box blue sapUiTinyMarginTop">
                        <HBox width="10%" justifyContent="Center" alignItems="Center">
                            <core:Icon src="sap-icon://flag-2" class="custom-blue-state"/>
                        </HBox>
                        <HBox width="20%">
                            <Text text="현재 실적" />
                        </HBox>
                        <HBox width="20%" justifyContent="End">
                            <Text
                                class="custom-blue-state bold"
                                emptyIndicatorMode="On"
                                text="{
                                            parts:[
                                                {path:'model>/Sale', targetType: 'any'},
                                                {value:''}
                                            ],
                                            formatter: '.onFormatPerformance'
                                            }"
                                tooltip="{
                                            parts:[
                                                {path:'model>/Sale', targetType: 'any'},
                                                {value:'tooltip'}                                     
                                            ],
                                            formatter: '.onFormatPerformance'                                
                                            }"
                                wrapping="false"
                                width="100%"
                                textAlign="End"
                            />
                        </HBox>

                        <HBox visible="{=!!${model>/SaleContarst}}" width="45%" justifyContent="SpaceBetween" alignItems="Center">
                            
                            <HBox class="custom-dashboard-box2">
                                <core:Icon src="sap-icon://trend-up" class="custom-positive-state sapUiTinyMarginEnd"/>
                                <Text
                                    class="custom-positive-state"
                                    emptyIndicatorMode="On"
                                    text="{
                                            parts:[
                                                {path:'model>/SaleContarst', targetType: 'any'},
                                                {value:'percent'}
                                            ],
                                            formatter: '.onFormatPerformance'
                                        }"
                                    tooltip="{
                                            parts:[
                                                {path:'model>/SaleContarst', targetType: 'any'},
                                                {value:'tooltip'}                                      
                                            ],
                                            formatter: '.onFormatPerformance'                                
                                        }"
                                    wrapping="false"
                                    width="100%"
                                    textAlign="End"
                                />
                            </HBox>
                            <VBox justifyContent="Center">
                                <Text text="전년대비" />
                            </VBox>
                        </HBox>
                    </HBox>
                </VBox>
            </VBox>
        </form:content>
    </form:SimpleForm>
</mvc:View>
