                    width="16%"
                >
                    <VBox
                        height="6rem"
                        justifyContent="Center"
                        width="100%"
                    >
                        <Title
                            text="{tableModel>}"
                            class="sapUiSmallMarginLeft"
                            width="100%"
                            textAlign="Center"
                        />
                    </VBox>
                </VBox>

                <VBox
                    items="{tableModel>/}"
                    width="28%"
                    class="custom-vbox-item-multi"
                    
                >
                    <VBox
