<mvc:View xmlns:m="sap.m"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:w="sap.ui.integration.widgets"
	xmlns:card="sap.f.cards"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:ui="sap.ui.table"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    controllerName="bix.pl.performance.controller.Sale"
    width="100%"
    height="100%">
    <Page showHeader="false" backgroundDesign="Standard" >
        <Panel expandable="false" expanded="true" width="auto" class="sapUiTinyMargin">
            <headerToolbar>
                <OverflowToolbar >
                    <ObjectIdentifier title="상세"/>
                </OverflowToolbar>
            </headerToolbar>
            <content>
                <f:GridContainer id="demoGrid" columnsChange=".onGridColumnsChange" class="center">
                    <f:layout>
                        <f:GridContainerSettings rowSize="5rem" columnSize="5rem" gap="1rem" />
                    </f:layout>
                    <f:layoutXS>
                        <f:GridContainerSettings rowSize="5rem" columnSize="5rem" gap="0.5rem" />
                    </f:layoutXS>

                    <w:Card manifest="../bix/card/performanceBar/manifest.json">
                        <w:customData>
                            <card:CardBadgeCustomData value="New" announcementText="Card was newly added."/>
                        </w:customData>
                        <w:layoutData>
                            <f:GridContainerItemLayoutData rows="4" columns="12" />
                        </w:layoutData>
                    </w:Card>

                    <w:Card manifest="../bix/card/treemap/manifest.json">
                        <w:customData>
                            <card:CardBadgeCustomData value="New" announcementText="Card was newly added."/>
                        </w:customData>
                        <w:layoutData>
                            <f:GridContainerItemLayoutData rows="4" columns="12" />
                        </w:layoutData>
                    </w:Card>

                    <!-- <w:Card manifest="../bix/card/yoy/manifest.json">
                        <w:customData>
                            <card:CardBadgeCustomData value="New" announcementText="Card was newly added."/>
                        </w:customData>
                        <w:layoutData>
                            <f:GridContainerItemLayoutData  minRows="4" columns="12" />
                        </w:layoutData>
                    </w:Card> -->
                </f:GridContainer>
            </content>
        </Panel>
    </Page>
</mvc:View>
