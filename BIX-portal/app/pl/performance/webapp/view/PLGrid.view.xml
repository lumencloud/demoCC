<mvc:View controllerName="bix.pl.performance.controller.PLGrid"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:w="sap.ui.integration.widgets"
	xmlns:card="sap.f.cards"
	xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:table="sap.ui.table"
    xmlns:layout="sap.ui.layout"
    xmlns:rowmodes="sap.ui.table.rowmodes"
    xmlns:unified="sap.ui.unified"
    xmlns:mdc="sap.ui.mdc"
    busyIndicatorDelay="0"
    displayBlock="true"
    width="100%"
    height="100%"
>   
    <ScrollContainer
		height="100%"
		width="100%"
		vertical="true">
		<f:GridContainer id="demoGrid" class="sapUiSmallMargin" columnsChange=".onGridColumnsChange">
			<f:layout>
				<f:GridContainerSettings rowSize="5rem" columnSize="5rem" gap="1rem" />
			</f:layout>
			<f:layoutXS>
				<f:GridContainerSettings rowSize="5rem" columnSize="5rem" gap="0.5rem" />
			</f:layoutXS>

			<GenericTile header="매출 진척도" frameType="OneByHalf">
				<layoutData>
					<f:GridContainerItemLayoutData rows="1" columns="2" />
				</layoutData>
				<TileContent>
					<NumericContent scale="M" value="10%" valueColor="Critical" indicator="Up" withMargin="false" />
				</TileContent>
			</GenericTile>

			<GenericTile header="마진 진척도" frameType="OneByHalf">
				<layoutData>
					<f:GridContainerItemLayoutData rows="1" columns="2" />
				</layoutData>
				<TileContent>
					<NumericContent scale="M" value="21%" valueColor="Error" indicator="Up" withMargin="false" />
				</TileContent>
			</GenericTile>

			<w:Card manifest="../bix/card/yoy/manifest.json">
				<w:customData>
					<card:CardBadgeCustomData value="New" announcementText="Card was newly added."/>
				</w:customData>
				<w:layoutData>
					<f:GridContainerItemLayoutData  minRows="5" columns="6" />
				</w:layoutData>
			</w:Card>

		</f:GridContainer>
	</ScrollContainer>
</mvc:View>