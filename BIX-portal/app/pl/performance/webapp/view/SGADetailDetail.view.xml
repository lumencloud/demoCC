<mvc:View xmlns:launchpad="sap.ushell.ui.launchpad" controllerName="bix.pl.performance.controller.SGADetailDetail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:table="sap.ui.table"
    xmlns:layout="sap.ui.layout"
    xmlns:rowmodes="sap.ui.table.rowmodes"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns:viz.data="sap.viz.ui5.data"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    xmlns:plugins="sap.m.plugins"
    busyIndicatorDelay="0"
    displayBlock="true"
    width="100%"
    height="100%"
>
    <table:Table id="sagDetailDetailTable"
        rows="{sgaDetailDetailTableModel>/}" 
        selectionMode="None">
        
        <table:rowMode>
            <rowmodes:Fixed rowCount="12" />
        </table:rowMode>

        <table:columns>
            <table:Column hAlign="Center" autoResizable="true">
                <Label text="구분" wrapping="true"/>
                <table:template>
                    <Text text="{sgaDetailDetailTableModel>type}" wrapping="false" width="100%" textAlign="Center"/>
                </table:template>
            </table:Column>
            <table:Column hAlign="Center" autoResizable="true">
                <Label text="당해추정" wrapping="true"/>
                <table:template>
                    <Text text="{sgaDetailDetailTableModel>aa}" wrapping="false" width="100%" textAlign="Center"/>
                </table:template>
            </table:Column>
            <table:Column hAlign="Center" autoResizable="true">
                <Label text="전년동기" wrapping="true"/>
                <table:template>
                    <Text text="{sgaDetailDetailTableModel>bb}" wrapping="false" width="100%" textAlign="Center"/>
                </table:template>
            </table:Column>
            <table:Column hAlign="Center" autoResizable="true">
                <Label text="차이" wrapping="true"/>
                <table:template>
                    <Text text="{sgaDetailDetailTableModel>cc}" wrapping="false" width="100%" textAlign="Center"/>
                </table:template>
            </table:Column>
        </table:columns>
    </table:Table>
</mvc:View>