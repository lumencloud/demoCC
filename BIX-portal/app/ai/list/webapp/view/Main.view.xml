<mvc:View
    controllerName="bix.ai.list.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns:table="sap.ui.table"
    xmlns:rowmodes="sap.ui.table.rowmodes"
    height="100%"
    width="100%"
>
    <f:DynamicPage
        class="sapUiContentPadding"
        fitContent="true"
    >
        <f:content>
            <Panel
                width="100%"
                height="100%"
            >
                <table:Table
                    class="custom-mg-uiTable custom-table-rounding-border custom-mg-uiTable-noline"
                    width="auto"
                    selectionMode="Single"
                    id="aiTable"
                    rows="{path:'aiModel>/values'}"
                    enableSelectAll="false"
                    rowSelectionChange=".onOpenTab"
                    selectionBehavior="RowOnly" 
                    rowActionCount="1"
                >
                    <table:extension>
                        <OverflowToolbar
                            height="5rem"
                            style="Clear"
                        >
                            <Title
                                id="tableTitle"
                                text="AI Report 목록"
                                class="custom-mg-title"
                            />
                        </OverflowToolbar>
                    </table:extension>
                    <table:rowMode>
                        <rowmodes:Auto />
                    </table:rowMode>
                    <table:columns>
                        <table:Column
                            label="제목"
                            width="60%"
                            hAlign="Center"
                        >
                            <table:template>
                                <HBox>
                                    <Text
                                        text="{aiModel>title}"
                                        tooltip="{aiModel>title}"
                                        wrapping="false"
                                        class="custom-text-medium"
                                    />
                                </HBox>
                            </table:template>
                        </table:Column>
                        <table:Column
                            label="작성자"
                            width="10%"
                            hAlign="Center"
                        >
                            <table:template>
                                <HBox justifyContent="Center">
                                    <Text
                                        text="{aiModel>createdby}"
                                        tooltip="{aiModel>createdby}"
                                        wrapping="false"
                                    />
                                </HBox>
                            </table:template>
                        </table:Column>
                        <table:Column
                            label="등록 날짜"
                            width="10%"
                            hAlign="Center"
                        >
                            <table:template>
                                <Text
                                    text="{
                                path:'aiModel>createdAt'
                                }"
                                    maxLines="1"
                                    tooltip="{ 
                                path:'aiModel>createdAt'
                                }"
                                />
                            </table:template>
                        </table:Column>
                    </table:columns>
                </table:Table>
            </Panel>
        </f:content>
    </f:DynamicPage>
</mvc:View>
