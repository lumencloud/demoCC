<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog title="세션 확인" contentWidth="20rem" verticalScrolling="false" afterClose="_onAfterClose" id="dialog">
        <buttons>
            <Button visible="{= !${_internal>/expired} }" text="세션 연장" press="_onContinueWorking" type="Emphasized" id="continue"/>
            <Button visible="{_internal>/expired}" text="Sign In" press="_onSignIn" type="Emphasized" id="signin"/>
            <Button visible="{_internal>/expired}" text="닫기" press="_onDialogClose" id="close" tooltip="화면이 정상 동작하지 않습니다. 새로고침 해주세요."/>
        </buttons>
        <IllustratedMessage
            title="{= ${_internal>/expired} ? '유저세션이 만료되었습니다' : '세션이 만료됩니다'}"
            description="{ path: '_internal>/timeLeft', formatter: '._formatDescription' }"
            illustrationType="{= ${_internal>/expired} ? 'tnt-SessionExpired' : 'tnt-SessionExpiring' }"
            id="message"/>
    </Dialog>
</core:FragmentDefinition>