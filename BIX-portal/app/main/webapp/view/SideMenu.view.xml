<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    controllerName="bix.main.controller.SideMenu"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <Page
        id="sideMenu"
        showHeader="true"
        backgroundDesign="List"
    >
        <customHeader>
            <Toolbar>
                <SearchField
                    search="onSearchMenu"
                    placeholder="메뉴명"
                />
                <ToolbarSpacer />
                <Button
                    icon="sap-icon://close-command-field"
                    press="onCloseSideMenu"
                />
            </Toolbar>
        </customHeader>
        <Tree
            id="menuTree"
            items="{path: 'main_menuModel>/',
            filters: {path: 'useFlag', operator: 'EQ', value1: true} }"
            showSeparators="None"
            updateFinished="onUpdateTree"
        >
            <CustomTreeItem
                press="onPressMenu"
                type="Active"
                class="treeTableBackgroud"
            >
                <FlexBox
                    width="100%"
                    alignItems="Center"
                    justifyContent="Start"
                    renderType="Bare"
                >
                    <!-- <HBox alignItems="Center"> -->
                    <ObjectIdentifier
                        titlePress="onNavToApp"
                        titleActive="{= ${main_menuModel>isApp} === 'main' || ${main_menuModel>isApp} === 'sub'}"
                        title="{ path:'main_menuModel>i18nTitle_i18nKey',
                            formatter: '.formatI18nMenuTitle'}"
                    />
                    <core:Icon
                        size="0.7rem"
                        activeColor="rgb(77, 170, 213)"
                        hoverColor="rgb(104, 179, 213)"
                        color="rgb(29,143,196)"
                        press="onOpenBrowserApp"
                        src="sap-icon://action"
                        visible="{= ${main_menuModel>code} ? true : false}"
                        class="sapUiTinyMargin"
                    />
                    <!-- </HBox>
                    <HBox alignItems="Center">
                        <Button press="onNavToApp" type="Transparent" icon="sap-icon://navigation-right-arrow" visible="{= ${main_menuModel>code} ? true : false}"/>
                    </HBox> -->
                </FlexBox>
            </CustomTreeItem>
            <!-- <StandardTreeItem
                title="{ path:'main_menuModel>i18nTitle_i18nKey',
                        formatter: '.formatI18nMenuTitle'}"
                icon="{main_menuModel>iconSrc}"
                type="{= ${main_menuModel>code} ? 'Navigation' : 'Active' }"
                press="onPressMenu"
            /> -->
        </Tree>
    </Page>
</mvc:View>
