{
  "welcomeFile": "/main/index.html",
  "authenticationMethod": "route",
  "routes": [
    {
      "source": "^/ui5/(.*)$",
      "target": "$1",
      "destination": "ui5",
      "csrfProtection": false,
      "authenticationType": "none"
    },
    {
      "source": "^/favicon.ico$",
      "localDir": "./resources/",
      "csrfProtection": false,
      "authenticationType": "none"
    },
    {
        "source": "^/themes_/(.*)$",
        "target": "$1",
        "service": "com.sap.ui.theming",
        "endpoint": "runtime"
    },
    {
      "source": "^/?odata/(.*)$",
      "target": "/odata/$1",
      "destination": "srv-api",
      "csrfProtection": false,
      "authenticationType": "none"
    },
    {
        "source": "^/sap/(.*)$",
        "target": "/sap/$1",
        "destination": "ERP_HTTP_DEST",
        "authenticationType": "none"
    },
    {
        "source": "^/http/(.*)$",
        "target": "/http/$1",
        "destination": "ERP_IT_CAP",
        "authenticationType": "none"
    },
    {
      "source": "^/genI18n/(.*)$",
      "target": "/$1",
      "destination": "srv-api",
      "csrfProtection": true,
      "authenticationType": "none"
    },
    {
      "source": "^/bix/portal/i18n/(.*)$",
      "target": "$1",
      "localDir": "./resources/i18n",
      "cacheControl": "no-cache, no-store, must-revalidate",
      "authenticationType": "none",
      "csrfProtection": true
    },
    {
      "source": "^/cardcomponent/(.*)$",
      "target": "bixcard$1",
      "service": "html5-apps-repo-rt",
      "authenticationType": "none",
      "csrfProtection": true
    },
    {
      "source": "^/bix/card/(.*)$",
      "target": "/bixcard$1",
      "service": "html5-apps-repo-rt",
      "cacheControl": "no-cache, no-store, must-revalidate",
      "authenticationType": "none",
      "csrfProtection": true
    },
    {
      "source": "^/main/(.*)$",
      "target": "/bixmain/$1",
      "service": "html5-apps-repo-rt",
      "authenticationType": "none",
      "cacheControl": "no-cache",
      "csrfProtection": true
    },
    {
      "source": "^/([^/]+)/(.*)$",
      "target": "/bix$1$2",
      "service": "html5-apps-repo-rt",
      "authenticationType": "none",
      "csrfProtection": true
    }
  ]
}