                    colorScheme="{= ${Model>/br_yoy} === 0 ? 1 :
                        ${Model>/br_yoy} > 0 ? 8 : 2}" width="100%"/>
            </HBox>
            <HBox class="table-content" alignItems="Center">
                <Text text="RoHC"/>
