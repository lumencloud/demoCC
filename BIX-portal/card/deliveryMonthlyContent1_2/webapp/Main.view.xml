                    colorScheme="{= ${Model>/profit_rate_yoy} === 0 ? 1 :
                        ${Model>/profit_rate_yoy} > 0 ? 8 : 2}" width="100%"/>
            </HBox>
            <HBox class="table-content" alignItems="Center">
                <Text text="BR"/>
                <Text text="{
                    parts: [
                        {path: 'Model>/br'},
                        {value: 'number'}
                    ],
