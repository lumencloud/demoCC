<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:table="sap.ui.table"
    xmlns:rowmodes="sap.ui.table.rowmodes"
    width="100%"
    displayBlock="true"
    controllerName="bix.card.plPlanPipelineAmountsTable.Main"
    
>

     <table:Table
        id="plPlanPipelineAmountsTable"
        class="custom-table-container custom-table-header custom-table-body custom-table-first-emphasis custom-uiTable-selection custom-inherit-height custom-selection-radius" 
        selectionMode="Single" 
        selectionBehavior="RowOnly" 
        rowSelectionChange="onRowSelectionChange"
        enableColumnReordering="false"
        fixedColumnCount="1"
        busyIndicatorDelay="0"
        >

        <table:extension>
            <OverflowToolbar width="100%" height="3rem" style="Standard">                
                <ToolbarSpacer />
            </OverflowToolbar>
        </table:extension>
        
        <table:rowMode>
            <rowmodes:Fixed rowCount="8" />
        </table:rowMode>

        <table:columns>            
            <table:Column hAlign="Center" headerSpan="7" resizable="false"  width="10rem">
                <table:multiLabels>
                    <Label text="Pipeline 상세 - 금액별 View" wrapping="true"/>
                    <Label text="100억 이상"/>                    
                </table:multiLabels>
                <table:template>
                    <Text text="" 
                    tooltip=""
                    wrapping="false" width="100%" textAlign="End" emptyIndicatorMode="On"/>
                </table:template>
            </table:Column>

            <table:Column hAlign="Center" resizable="false"  width="10rem">
                <table:multiLabels>
                    <Label text=""/>                    
                    <Label text="50억 ~ 100억"/>                    
                </table:multiLabels>
                <table:template>
                    <Text text="" 
                    tooltip=""
                    wrapping="false" width="100%" textAlign="End" emptyIndicatorMode="On"/>
                </table:template>
            </table:Column>

            <table:Column hAlign="Center" resizable="false"  width="10rem">
                <table:multiLabels>
                    <Label text=""/>                    
                    <Label text="30억 ~ 50억"/>                    
                </table:multiLabels>
                <table:template>
                    <Text text="" 
                    tooltip=""
                    wrapping="false" width="100%" textAlign="End" emptyIndicatorMode="On"/>
                </table:template>
            </table:Column>

            <table:Column hAlign="Center" resizable="false"  width="10rem">
                <table:multiLabels>
                    <Label text=""/>                    
                    <Label text="10억 ~ 30억"/>                    
                </table:multiLabels>
                <table:template>
                    <Text text="" 
                    tooltip=""
                    wrapping="false" width="100%" textAlign="End" emptyIndicatorMode="On"/>
                </table:template>
            </table:Column>

            <table:Column hAlign="Center" resizable="false"  width="10rem">
                <table:multiLabels>
                    <Label text=""/>                    
                    <Label text="5억 ~ 10억"/>                    
                </table:multiLabels>
                <table:template>
                    <Text text="" 
                    tooltip=""
                    wrapping="false" width="100%" textAlign="End" emptyIndicatorMode="On"/>
                </table:template>
            </table:Column>

            <table:Column hAlign="Center" resizable="false"  width="10rem">
                <table:multiLabels>
                    <Label text=""/>                    
                    <Label text="1억 ~ 5억"/>                    
                </table:multiLabels>
                <table:template>
                    <Text text="" 
                    tooltip=""
                    wrapping="false" width="100%" textAlign="End" emptyIndicatorMode="On"/>
                </table:template>
            </table:Column>

            <table:Column hAlign="Center" resizable="false"  width="10rem">
                <table:multiLabels>
                    <Label text=""/>                    
                    <Label text="1억 미만"/>                    
                </table:multiLabels>
                <table:template>
                    <Text text="" 
                    tooltip=""
                    wrapping="false" width="10rem" textAlign="End" emptyIndicatorMode="On"/>
                </table:template>
            </table:Column>

                                          
        </table:columns>
    </table:Table>
</mvc:View>
