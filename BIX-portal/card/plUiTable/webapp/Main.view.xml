<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:table="sap.ui.table"
    xmlns:rowmodes="sap.ui.table.rowmodes"
    width="100%"
    displayBlock="true"
    controllerName="bix.card.plUiTable.Main"
    
>
     <table:Table
        id="plUiTable"
        class="custom-table-container custom-table-header custom-table-body custom-table-first-emphasis custom-uiTable-selection custom-inherit-height custom-selection-radius" 
        selectionMode="Single" 
        selectionBehavior="RowOnly" 
        rowSelectionChange="onRowSelectionChange"
        enableColumnReordering="false"
        fixedColumnCount="1"
        busyIndicatorDelay="0">

        <table:extension>
            <OverflowToolbar width="100%" height="3rem" style="Standard">
                <Avatar displaySize="XS" initials="PL" showBorder="true" class="customTableAvatar" backgroundColor="Transparent"/>
                <ToolbarSpacer />
                <Button text="전체보기" icon="sap-icon://menu2" press="onDetail" type="Transparent" class="customTableButton"/>
                <ToolbarSeparator />
                <Text text="단위 (억)"/>
            </OverflowToolbar>
        </table:extension>
        
        <table:rowMode>
            <rowmodes:Fixed rowCount="8" />
        </table:rowMode>

        <table:columns>
            <table:Column hAlign="Center" width="6rem" resizable="false" name="type" >
                <table:multiLabels>
                    <Label text="구분" wrapping="true"/>
                    <Label text=""/>
                </table:multiLabels>
                <table:template>
                    <Text text="{type}" wrapping="false" width="100%" textAlign="Center"
                        emptyIndicatorMode="On" />
                </table:template>
            </table:Column>

            <table:Column hAlign="Begin" width="100%" headerSpan="1" resizable="false" >
                <table:multiLabels>
                    <Label text="연간 목표"/>
                    <Label text=""/>
                    <!-- <Label text='{= ${tableYearModel>/year} + "년"}' wrapping="true"/> -->
                </table:multiLabels>
                <table:template>
                    <Text text="{
                            parts: [
                                {path: 'type', targetType: 'any' },
                                {path: 'target_curr_y_value', targetType: 'any' },
                                {value:''},
                                {value:'target'}
                            ],
                            formatter: '.onFormatPerformance'
                        }" 
                        tooltip="{parts: [
                                {path: 'type', targetType: 'any' },
                                {path: 'target_curr_y_value', targetType: 'any' },
                                {value:''},
                                {value:'targetTooltip'}
                            ],
                            formatter: '.onFormatPerformance'}"
                        wrapping="false" width="100%" textAlign="End" emptyIndicatorMode="On"/>
                </table:template>
            </table:Column>

            <table:Column hAlign="Begin" width="5.5rem" headerSpan="3" resizable="false" visible="{= ${tableColumnSet>/PL_Column} === 'valueGap'}">
                <table:multiLabels>
                    <HBox justifyContent="SpaceBetween" alignItems="Center" width="100%">
                        <!-- <Label text="실적 / 비교" wrapping="true"/> -->
                        <SegmentedButton selectedKey="{tableColumnSet>/PL_Column}" class="custom-segment-btn-intable">
                            <items>
                                <SegmentedButtonItem text="실적" key="valueGap"/>
                                <SegmentedButtonItem text="진척도" key="progressGap"/>
                            </items>
                        </SegmentedButton>
                    </HBox>
                    <Label text="당월 누계" wrapping="true"/>
                </table:multiLabels>
                <table:template>
                    <Text text="{
                        parts: [
                            {path: 'type', targetType: 'any' },
                            {path: 'actual_curr_ym_value', targetType: 'any' }
                        ],
                        formatter: '.onFormatPerformance'
                    }" 
                    tooltip="{parts: [
                            {path: 'type', targetType: 'any' },
                            {path: 'actual_curr_ym_value', targetType: 'any' },
                            {value:''},
                            {value:'tooltip'}
                        ],
                        formatter: '.onFormatPerformance'}"
                    wrapping="false" width="100%" textAlign="End"  emptyIndicatorMode="On"/>
                </table:template><!--{= ${tableColumnSet>/PL_Column} === 'valueGap' ? 'End' : 'Begin'}-->
            </table:Column>

            <table:Column hAlign="Center" width="5.5rem" resizable="false" visible="{= ${tableColumnSet>/PL_Column} === 'valueGap'}">
                <table:multiLabels>
                    <Label wrapping="true"/>
                    <Label text="전년 동기"/>
                </table:multiLabels>
                <table:template>
                    <Text
                    text="{
                        parts: [
                            {path: 'type', targetType: 'any' },
                            {path: 'actual_last_ym_value', targetType: 'any'}
                        ],
                        formatter: '.onFormatPerformance'
                    }"
                    tooltip="{parts: [
                            {path: 'type', targetType: 'any' },
                            {path: 'actual_last_ym_value', targetType: 'any' },
                            {value:''},
                            {value:'tooltip'}
                        ],
                        formatter: '.onFormatPerformance'}"
                    wrapping="false" width="100%" textAlign="End" emptyIndicatorMode="On"/>
                </table:template>
            </table:Column>

            <table:Column hAlign="Center" width="5.5rem" resizable="false" visible="{= ${tableColumnSet>/PL_Column} === 'valueGap'}">
                <table:multiLabels>
                    <Label wrapping="true"/>
                    <Label text="GAP"/>
                </table:multiLabels>
                <table:template>
                    <Text text="{
                        parts: [
                            {path: 'type', targetType: 'any' },
                            {path: 'actual_curr_ym_value', targetType: 'any' },
                            {path: 'actual_last_ym_value', targetType: 'any' }
                        ],
                        formatter: '.onFormatPerformance'
                    }" 
                    tooltip="{parts: [
                            {path: 'type', targetType: 'any' },
                            {path: 'actual_curr_ym_value', targetType: 'any' },
                            {path: 'actual_last_ym_value', targetType: 'any' },
                            {value:'tooltip'}
                        ],
                        formatter: '.onFormatPerformance'}"
                    wrapping="false" width="100%" textAlign="End" emptyIndicatorMode="On"/>
                </table:template>
            </table:Column>
            
            <table:Column hAlign="Begin" width="5.5rem" headerSpan="3" resizable="false" visible="{= ${tableColumnSet>/PL_Column} === 'progressGap'}">
                <table:multiLabels>
                    <HBox justifyContent="SpaceBetween" alignItems="Center" width="100%">
                        <!-- <Label text="실적 / 비교" wrapping="true"/> -->
                        <SegmentedButton selectedKey="{tableColumnSet>/PL_Column}" class="custom-segment-btn-intable">
                            <items>
                                <SegmentedButtonItem text="실적" key="valueGap"/>
                                <SegmentedButtonItem text="진척도" key="progressGap"/>
                            </items>
                        </SegmentedButton>
                    </HBox>
                    <Label text="진척도" wrapping="true"/>
                    <!-- <Label text=""/> -->
                </table:multiLabels>
                <table:template>
                    <Text text="{
                        parts: [
                            {path: 'type', targetType: 'any' },
                            {path: 'actual_curr_ym_rate', targetType: 'any' },
                            {value:''},
                            {value:'percent'}
                        ],
                        formatter: '.onFormatPerformance'}"
                        tooltip="{
                            parts: [
                                {path: 'type', targetType: 'any' },
                                {path: 'actual_curr_ym_rate', targetType: 'any' },
                                {value:''},
                                {value:'percent'}
                            ],
                            formatter: '.onFormatPerformance'}"
                        wrapping="false" width="100%" textAlign="End" emptyIndicatorMode="On"/>
                </table:template>
            </table:Column>

            <table:Column hAlign="Center" width="5.5rem" headerSpan="1" resizable="false" visible="{= ${tableColumnSet>/PL_Column} === 'progressGap'}">
                <table:multiLabels>
                    <!-- <HBox justifyContent="SpaceBetween" alignItems="Center" width="100%">
                        <Label text="실적 / 비교" wrapping="true"/>
                        <SegmentedButton selectedKey="{tableColumnSet>/PL_Column}">
                            <items>
                                <SegmentedButtonItem text="실적" key="valueGap" width="3rem"/>
                                <SegmentedButtonItem text="진척도" key="progressGap" width="4rem"/>
                            </items>
                        </SegmentedButton>
                    </HBox> -->
                    <Label text=""/>
                    <Label text="전년 동기"/>
                </table:multiLabels>
                <table:template>
                    <Text text="{
                        parts: [
                            {path: 'type', targetType: 'any' },
                            {path: 'actual_last_ym_rate', targetType: 'any' },
                            {value:''},
                            {value:'percent'}
                        ],
                        formatter: '.onFormatPerformance'}"
                        tooltip="{
                            parts: [
                                {path: 'type', targetType: 'any' },
                                {path: 'actual_last_ym_rate', targetType: 'any' },
                                {value:''},
                                {value:'percent'}
                            ],
                            formatter: '.onFormatPerformance'}"
                    wrapping="false" width="5rem" textAlign="End" emptyIndicatorMode="On"/>
                </table:template>
            </table:Column>

            <table:Column hAlign="Center" width="5.5rem" resizable="false"  visible="{= ${tableColumnSet>/PL_Column} === 'progressGap'}">
                <table:multiLabels>
                    <Label text="진척도" wrapping="true"/>
                    <Label text="GAP"/>
                </table:multiLabels>
                <table:template>
                    <Text text="{
                        parts: [
                            {path: 'type', targetType: 'any' },
                            {path: 'actual_curr_ym_rate', targetType: 'any' },
                            {path: 'actual_last_ym_rate', targetType: 'any' },
                            {value:'percent'}
                        ],
                        formatter: '.onFormatPerformance'}"
                        tooltip="{
                            parts: [
                                {path: 'type', targetType: 'any' },
                                {path: 'actual_curr_ym_rate', targetType: 'any' },
                                {path: 'actual_last_ym_rate', targetType: 'any' },
                                {value:'percent'}
                            ],
                            formatter: '.onFormatPerformance'}"
                        wrapping="false" width="100%" textAlign="End" emptyIndicatorMode="On"/>
                </table:template>
            </table:Column>
        </table:columns>
    </table:Table>
</mvc:View>
