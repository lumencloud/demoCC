<mvc:View
    controllerName="bix.card.planSectorPipelineChart.card"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    width="100%"
    height="100%"
    displayBlock="true"
>
    <Panel
        expandable="false"
        expanded="true"
        width="auto"
        height="auto"
    >
    <headerToolbar>
            <OverflowToolbar style="Clear">
                <ToolbarSpacer />
                <Select
                    change=".onUiChange"
                    width="40%"
                    items="{path: 'SelectModel>/'}"
                >
                    <items>
                        <core:ListItem
                            key="{SelectModel>key}"
                            text="{SelectModel>name}"
                        />
                    </items>
                </Select>
            </OverflowToolbar>
        </headerToolbar>
        
        <content>
            <VBox fitContainer="true">
                <FlexBox
                    alignItems="Center"
                    justifyContent="Center"
                    fitContainer="true"
                    visible="{=${uIModel>/tableKind} === 'stage'}"
                >
                    <core:HTML id="html0" />
                </FlexBox>

                <FlexBox
                    alignItems="Center"
                    justifyContent="Center"
                    fitContainer="true"
                    visible="{=${uIModel>/tableKind} === 'month'}"
                >
                    <core:HTML id="html1" />
                </FlexBox>

                <FlexBox
                    alignItems="Center"
                    justifyContent="Center"
                    fitContainer="true"
                    visible="{=${uIModel>/tableKind} === 'money'}"
                >
                    <core:HTML id="html2" />
                </FlexBox>
            </VBox>
        </content>
    </Panel>
</mvc:View>
