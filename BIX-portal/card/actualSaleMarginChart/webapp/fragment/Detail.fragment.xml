<core:FragmentDefinition 
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:table="sap.ui.table"  
    xmlns:rowmodes="sap.ui.table.rowmodes"  
	busyIndicatorDelay="0"
    displayBlock="true"
    width="100%"
    height="100%">
    <Dialog id="detailDialog" class="sapUiContentPadding"  
        contentWidth="30rem" contentHeight="80%" draggable="true" resizable="false" showHeader="false">
        <content>
        	<OverflowToolbar width="100%" height="3rem" style="Standard">
				<content>
					<Title text="{uiModel>/title}" class="custom-header-subtitle"  />
					<ToolbarSpacer/>
					<Button icon="sap-icon://decline" press=".onCloseDetailDialog" />
				</content>
			</OverflowToolbar>
        
            <table:Table 
                rows="{tableModel>/}"
                selectionMode="None"
                class="custom-table-container custom-table-header custom-table-body custom-table-first-emphasis custom-uiTable-selection custom-inherit-height custom-selection-radius" 
                >
                <table:rowMode>
                    <rowmodes:Auto/>
                </table:rowMode>

                <table:columns>
                    <table:Column hAlign="Center" width="100%">
                        <Label text="항목" wrapping="true"/>

                        <table:template>
                            <Text text="{tableModel>type}" tooltip="{tableModel>type}" wrapping="false" width="100%" textAlign="Center"/>
                        </table:template>
                    </table:Column>
                    <table:Column hAlign="Center" width="100%">
                        <Label text="월간" wrapping="true"/>

                        <table:template>
                            <Text text="{tableModel>month}" tooltip="{tableModel>month}" wrapping="false" width="100%" textAlign="Center"/>
                        </table:template>
                    </table:Column>
                    <table:Column hAlign="Center" width="100%">
                        <Label text="연간" wrapping="true"/>

                        <table:template>
                            <Text text="{tableModel>year}" tooltip="{tableModel>year}" wrapping="false" width="100%" textAlign="Center"/>
                        </table:template>
                    </table:Column>
                </table:columns>
            </table:Table>
        </content>
    </Dialog>
</core:FragmentDefinition>
