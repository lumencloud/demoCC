<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:table="sap.ui.table"
    xmlns:rowmodes="sap.ui.table.rowmodes"
    width="100%"
    displayBlock="true"
    controllerName="bix.card.plPlanOffshoringTable.Main"
    
>
     <table:Table
        id="plPlanOffshoringTable"
        class="custom-table-container custom-table-header custom-table-body custom-table-first-emphasis custom-uiTable-selection custom-inherit-height custom-selection-radius" 
        selectionMode="Single" 
        selectionBehavior="RowOnly" 
        rowSelectionChange="onRowSelectionChange"
        enableColumnReordering="false"
        fixedColumnCount="1"
        busyIndicatorDelay="0">

        <table:extension>
            <OverflowToolbar width="100%" height="3rem" style="Standard">
                <Title id="tempMessage" text="※ 개발 보류" />
            
                <ToolbarSpacer />
                <Select items="{conditionSelect>/}" width="30%" change=".onChange">
                    <core:Item key="{conditionSelect>key}" text="{conditionSelect>value}"/>
                </Select>
                
                <!-- <Button text="상세보기" press="" type="Transparent" class="customTableButton"/> -->
            </OverflowToolbar>
        </table:extension>
        
        <table:rowMode>
            <rowmodes:Fixed rowCount="8" />
        </table:rowMode>

        <table:columns>
            <table:Column hAlign="Center" width="5rem" resizable="false" name="type" >
                <table:multiLabels>
                    <Label text="구분" wrapping="true"/>
                    <Label text=""/>
                    <Label text=""/>
                </table:multiLabels>
                <table:template>
                    <Text text="{type}" wrapping="false" width="100%" textAlign="Center"
                        emptyIndicatorMode="On" />
                </table:template>
            </table:Column>            
            <table:Column hAlign="Center" headerSpan="2" resizable="false">
                <table:multiLabels>
                    <Label text="활용 MM" wrapping="true" class="testaaa"/>
                    <HBox justifyContent="Begin" width="100%">
                    <Label text="연간 추정"/>                   
                    </HBox>
                    <Label text=""/>
                </table:multiLabels>
                <table:template>
                    <Text text="" 
                    tooltip=""
                    wrapping="false" width="100%" textAlign="End" emptyIndicatorMode="On"/>
                </table:template>
            </table:Column>
            <table:Column hAlign="Center" width="auto" resizable="false">
                <table:multiLabels>
                    <Label text="활용 MM" wrapping="true"/>
                    <Label text=""/>                    
                    <Label text="계획비"/>
                </table:multiLabels>
                <table:template>
                    <Text text="" 
                    tooltip=""
                    wrapping="false" width="100%" textAlign="End" emptyIndicatorMode="On"/>
                </table:template>
            </table:Column>
            <table:Column hAlign="Center" resizable="false"  headerSpan="2" >
                <table:multiLabels>
                    <Label text="O/I 효과" wrapping="true"/>
                    <HBox justifyContent="Begin" width="100%">
                    <Label text="연간 추정"/>                   
                    </HBox>
                    <Label text=""/>
                </table:multiLabels>
                <table:template>
                    <Text text="" 
                    tooltip=""
                    wrapping="false" width="100%" textAlign="End" emptyIndicatorMode="On"/>
                </table:template>
            </table:Column>
            <table:Column hAlign="Center" resizable="false" name="type" >
                <table:multiLabels>
                    <Label text="O/I 효과" wrapping="true"/>
                    <Label text="" textAlign="Begin"/>
                    <Label text="계획비"/>
                </table:multiLabels>
                <table:template>
                    <Text text="" 
                    tooltip=""
                    wrapping="false" width="100%" textAlign="End" emptyIndicatorMode="On"/>
                </table:template>
            </table:Column>            
        </table:columns>
    </table:Table>
</mvc:View>
